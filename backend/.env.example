# DEEPAXIS Management System - Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=4000

# ============================================
# DATABASE
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://deepaxis:deepaxis_secret@localhost:5432/deepaxis_db?schema=public"

# ============================================
# AUTHENTICATION
# ============================================
# JWT secret key - use a strong random string in production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ============================================
# CORS
# ============================================
# Frontend URL for CORS
CORS_ORIGIN=http://localhost:3000

# ============================================
# EMAIL / SMTP
# ============================================
# For local testing, use Mailtrap (https://mailtrap.io)
# For production, use SendGrid or Google SMTP
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
SMTP_FROM=noreply@deepaxis.com

# ============================================
# FILE UPLOADS
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# ============================================
# ENCRYPTION
# ============================================
# Key for encrypting sensitive data (like budget)
ENCRYPTION_KEY=your-32-character-encryption-key!

# ============================================
# n8n AUTOMATION (Optional)
# ============================================
N8N_ENABLED=false
N8N_WEBHOOK_URL=http://localhost:5678
# Secret key for n8n to call backend webhooks - generate a strong random string
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret-key-change-this

# ============================================
# REDIS (Optional - for session storage)
# ============================================
REDIS_URL=redis://localhost:6379
